
<h2>プロフィール編集</h2>

<%= form_with model: @user do |f| %>

    <div class="field" style="margin-bottom: 40px;">
      <label for="inputName">お名前</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
    
    <div class="field" style="margin-bottom: 40px;">
      <label for="inputImage">プロフィール画像</label>
      
      <% if @user.profile_image.attached? %>
        <div>
          <%= image_tag @user.profile_image, size: "100x100" %>
          <div>
            <%= f.check_box :remove_profile_image %>
            <%= f.label :remove_profile_image, "プロフィール画像を削除" %>
          </div>
        </div>
      <% end %>
      
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
    </div>
  
    
    <div class="actions">
      <%= f.submit "変更を保存" %>
    </div>
  
<% end %>