
    <h2>全ユーザー一覧</h2>
    <table class="table table-hover table-inverse">
        
        <tbody>
          
          <thead class="thead-dark">
            <tr>
              <th>ユーザー</th>
              <th>メールアドレス</th>
              <th></th>
            </tr>
          </thead>
          
          <% @users.each do |user| %>
              <tr style="height: auto;">
                <td><%= link_to user.name, user_show_by_name_path(user.name) %></td>
                <td><%= user.email %></td>
                <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %> </td>
              </tr>
          <% end %> 
          
        </tbody>
        
    </table>