<div style=" display: flex; align-items: stretch;">   
    <div class="col-lg-1" style="background-color: #B8860B; min-height: 100vh;" >
    </div>    
    
    <div class="col-lg-10" style = "margin:10px;">
        <h3>全ユーザー一覧</h3>
        <table class="table table-hover table-inverse">
            
            <tbody>
              
              <thead class="thead-dark">
                <tr>
                  <th>ユーザー</th>
                  <th>メールアドレス</th>
                  <th>登録日時</th>
                  <th>在籍状況</th>
                  <th></th>
                </tr>
              </thead>
              
              <% @users.each do |user| %>
                  <tr style="height: auto;">
                    <td><%= link_to user.name, user_show_by_name_path(user.name) %></td>
                    <td><%= user.email %></td>
                    <td><%= user.created_at %></td>
                    <td>
                      <% if user.is_active == false %>
                       <b>退会</b>
                      <% else %>
                       有効
                      <% end %>
                      </td>
                    <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-success" %> </td>
                  </tr>
              <% end %> 
              
            </tbody>
            
        </table>
        <%= paginate @users, theme: 'bootstrap-5' %>
    </div>
    
    <div class="col-lg-1" style="background-color: #B8860B; min-height: 100vh;" >
    </div>  
</div>