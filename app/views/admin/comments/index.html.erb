      <table class="table table-hover table-inverse">
          
          <tbody>
            
            <thead class="thead-dark">
              <tr>
                <th>コメント者</th>
                <th>日時</th>
                <th>投稿主</th>
                <th>投稿</th>
                <th>コメント</th>
                <th></th>
              </tr>
            </thead>
            
            <% @posts.each do |post| %>
              <% post.comments.each do |comment| %>
                <tr style="height: auto;">
                  <td style="word-break: break-all;">@<%= comment.user.name %></td>
                  <td style="word-break: break-all;"><%= comment.created_at.strftime('%Y/%m/%d') %></td>
                  <td><%= post.user.name %></td>
                  <td><%= link_to post.castle_name, post_path(post) %></td>
                  <td><%= comment.comment.truncate(50) %></td>
                  <td><%= link_to "削除", admin_comment_path(comment), method: :delete, class: "btn btn-success", data: { confirm: "本当に削除しますか？" } %></td>
                </tr>
              <% end %>
            <% end %> 
            
          </tbody>
          
      </table>