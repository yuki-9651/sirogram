<h2>検索結果</h2>

<table class="table table-hover table-inverse">


  <% if @range == "ユーザー" %>
  
    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
    
  <% else %>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.castle_name %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
    
  <% end %>
  
  
</table>