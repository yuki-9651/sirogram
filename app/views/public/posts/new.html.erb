
<div style="display: flex; height: 100%; background-color: #B8860B; padding: 20px;">
  
   <div style="flex: 1;">
     <h2>投稿フォーム</h2>
   </div>
   
   <div style="flex: 3; display: flex;">
      <%= form_with model: @post do |f| %>
      
        <div style="flex: 1; padding-bottom: 30px;">
          <h3>城名</h3>
          <%= f.text_field :castle_name %>
        </div>
        
        <div style="flex: 1; padding-bottom: 30px;">
          <h3>画像</h3>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        
        <div style="flex: 1; padding-bottom: 30px;">
          <h3>投稿本文</h3>
          <%= f.text_area :body , class: 'form-control', cols:50, rows:5%>
        </div>
        
        <div style="flex: 1; padding-bottom: 30px;">
          <%= f.submit '投稿', class: "btn btn-success" %>
        </div>
        
      <% end %>
      
    </div>

</div>