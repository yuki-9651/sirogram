
<div style="display: flex; height: 100%; background-color: #B8860B; padding: 20px;">
  
   <div style="flex: 1;">
     <h2>グループを作成</h2>
   </div>
   
   <div style="flex: 3; display: flex;">
      <%= form_with model: @group, local: true do |f| %>
            <div style="flex: 1; padding-bottom: 30px;">
              <h3>グループ名</h3>
              <%= f.text_field :group_name, maxlength: 30 , class: 'form-control', placeholder:"（例: 山城同好会）※30字以内"%>
            </div>
          
            <div style="flex: 1; padding-bottom: 30px;">
              <h3>紹介文</h3>
              <%= f.text_area :group_introduction, maxlength: 300 , class: 'form-control', cols:50, rows:8, placeholder: "グループの紹介をしよう(例: 山城好き集まれ！！）※400字以内"  %>
            </div>
          
            <div style="flex: 1; padding-bottom: 30px;">
              <h3>グループ画像</h3>
              <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
            </div>
          
            <div>
              <%= f.submit 'グループ作成', class: "btn btn-success" %>
            </div>
      <% end %>
      
    </div>

</div>