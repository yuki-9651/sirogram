
<div style="display: flex; height: 100%; background-color: #B8860B; padding: 20px;">
  
   <div style="flex: 1;">
     <h2>グループを作成</h2>
   </div>
   
   <div style="flex: 3; display: flex;">
      <%= form_with model: @group, local: true do |f| %>
            <div class="form-group" style="flex: 1; padding-bottom: 30px;">
              <h3>グループ名</h3>
              <%= f.text_field :group_name, class: 'form-control' %>
            </div>
          
            <div class="form-group" style="flex: 1; padding-bottom: 30px;">
              <h3>紹介文</h3>
              <%= f.text_area :group_introduction, class: 'form-control', cols:50, rows:5  %>
            </div>
          
            <div class="form-group" style="flex: 1; padding-bottom: 30px;">
              <h3>グループ画像</h3>
              <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
            </div>
          
            <div class="form-group">
              <%= f.submit class: 'btn btn-info' %>
            </div>
      <% end %>
      
    </div>

</div>