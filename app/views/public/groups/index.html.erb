<div style=" display: flex; align-items: stretch;">        
        
    <div class="col-lg-1" style="background-color: #B8860B; min-height: 100vh;" >
    </div>
    
    
    <div  class="col-lg-10" >
        <div style = "padding:20px;">
             <h2>グループ一覧</h2>
        </div> 
        <table class="table table-hover table-inverse">
          
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th>グループ名</th>
                <th>紹介文</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            
            <tbody>
              <% @groups.each do |group| %>
                <tr>
                  <td><%= image_tag group.get_image, size:"50x50" %></td>
                  <td><%= link_to group.group_name.truncate(30), group_path(group) %></td>
                  <td><%= group.group_introduction.truncate(50) %></td>
                  <td>
                    <%= link_to '詳細', group_path(group), class: "btn btn-sm btn-success" %>
                  </td>
                  <% if group.owner_id == current_user.id %>
                    <td>
                      <%= link_to '編集', edit_group_path(group), class: "btn btn-sm btn-success" %>
                    </td>
                    <td>
                      <%= link_to '削除', group ,method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
            
        </table>
      
    </div>
    <div class="col-lg-1" style="background-color: #B8860B; min-height: 100vh;" >
    </div>
</div>